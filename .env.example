# Admin password (required, deleted from .env after first load)
ADMIN_PASSWORD=change-me-to-a-strong-password

# App secret for HMAC signing and cookie encryption (required)
# Generate with: openssl rand -hex 32
APP_SECRET=change-me-generate-with-openssl-rand-hex-32

# Server
PORT=3000
HOST=0.0.0.0
BASE_URL=http://localhost:3000

# SMTP (for invite emails and upload notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=shareque@example.com

# Cleanup interval in minutes (default: 5)
CLEANUP_INTERVAL=5

# Max file upload size in MB (default: 100)
MAX_FILE_SIZE=100
